<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">

      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="search" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>

<!-- add new restaurant -->
<div class="mx-auto mt-5 mb-0" style="width: 200px;">
  <a href="/restaurants/new" class="btn btn-primary" style="width: 150px;">新增餐廳<i class="fas fa-plus-square"></i></a>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="button d-flex flex-row-reverse">
              <form action="/restaurants/{{this.id}}/delete?_method=DELETE" method="POST">
                <button class="btn btn-warning">delete</button>
              </form>
              <a href="/restaurants/{{this.id}}/edit?_method=PUT" class="f-btn">edit</a>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>